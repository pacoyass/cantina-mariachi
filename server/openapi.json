{
  "openapi": "3.0.3",
  "info": { "title": "Cantina API", "version": "1.0.0" },
  "servers": [ { "url": "/api" } ],
  "components": {
    "securitySchemes": {
      "BearerAuth": { "type": "http", "scheme": "bearer", "bearerFormat": "PASETO" }
    },
    "schemas": {
      "Error": {
        "type": "object",
        "properties": {
          "status": { "type": "string", "example": "error" },
          "error": {
            "type": "object",
            "properties": {
              "type": { "type": "string" },
              "message": { "type": "string" },
              "details": { "type": "object", "nullable": true },
              "code": { "type": "integer" }
            },
            "required": ["type", "message", "code"]
          },
          "timestamp": { "type": "string", "format": "date-time" }
        },
        "required": ["status", "error", "timestamp"]
      },
      "Success": {
        "type": "object",
        "properties": {
          "status": { "type": "string", "example": "success" },
          "message": { "type": "string" },
          "data": { "type": "object" },
          "timestamp": { "type": "string", "format": "date-time" }
        },
        "required": ["status", "message", "data", "timestamp"]
      },
      "AuthRegisterRequest": {
        "type": "object",
        "properties": {
          "email": { "type": "string", "format": "email" },
          "password": { "type": "string", "minLength": 8 },
          "name": { "type": "string" }
        },
        "required": ["email", "password", "name"]
      },
      "AuthLoginRequest": {
        "type": "object",
        "properties": {
          "email": { "type": "string", "format": "email" },
          "password": { "type": "string" }
        },
        "required": ["email", "password"]
      },
      "OrderItemInput": {
        "type": "object",
        "properties": {
          "menuItemId": { "type": "string" },
          "quantity": { "type": "integer", "minimum": 1 }
        },
        "required": ["menuItemId", "quantity"]
      },
      "Order": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "orderNumber": { "type": "string" },
          "status": { "type": "string", "enum": ["PENDING", "CONFIRMED", "PREPARING", "READY", "OUT_FOR_DELIVERY", "DELIVERED", "CANCELLED", "COMPLETED"] },
          "total": { "type": "number" },
          "trackingCode": { "type": "string" },
          "createdAt": { "type": "string", "format": "date-time" }
        },
        "required": ["id", "orderNumber", "status", "total", "createdAt"]
      }
    }
  },
  "paths": {
    "/auth/register": {
      "post": {
        "summary": "Register",
        "requestBody": { "required": true, "content": { "application/json": { "schema": { "$ref": "#/components/schemas/AuthRegisterRequest" } } } },
        "responses": { "201": { "description": "Created" }, "400": { "description": "Bad Request" } }
      }
    },
    "/auth/login": {
      "post": {
        "summary": "Login",
        "requestBody": { "required": true, "content": { "application/json": { "schema": { "$ref": "#/components/schemas/AuthLoginRequest" } } } },
        "responses": { "200": { "description": "OK" }, "401": { "description": "Unauthorized" } }
      }
    },
    "/auth/refresh-token": {
      "post": {
        "summary": "Refresh token",
        "responses": { "200": { "description": "OK" } }
      }
    },
    "/auth/logout": {
      "post": {
        "summary": "Logout",
        "responses": { "200": { "description": "OK" }, "401": { "description": "Unauthorized" } },
        "security": [ { "BearerAuth": [] } ]
      }
    },
    "/auth/sessions": {
      "get": {
        "summary": "List sessions",
        "parameters": [ { "name": "page", "in": "query", "schema": { "type": "integer" } }, { "name": "pageSize", "in": "query", "schema": { "type": "integer" } } ],
        "responses": { "200": { "description": "OK" }, "401": { "description": "Unauthorized" } },
        "security": [ { "BearerAuth": [] } ]
      }
    },
    "/auth/logout-all": {
      "post": {
        "summary": "Logout all sessions",
        "responses": { "200": { "description": "OK" }, "401": { "description": "Unauthorized" } },
        "security": [ { "BearerAuth": [] } ]
      }
    },
    "/auth/logout-others": {
      "post": {
        "summary": "Logout other sessions",
        "responses": { "200": { "description": "OK" }, "401": { "description": "Unauthorized" } },
        "security": [ { "BearerAuth": [] } ]
      }
    },
    "/auth/sessions/{id}": {
      "delete": {
        "summary": "Revoke session by id",
        "parameters": [ { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } } ],
        "responses": { "200": { "description": "OK" }, "401": { "description": "Unauthorized" } },
        "security": [ { "BearerAuth": [] } ]
      }
    },

    "/healthz": {
      "get": { "summary": "Health", "responses": { "200": { "description": "OK" } } }
    },
    "/auth/token": {
      "get": {
        "summary": "Get token",
        "responses": { "200": { "description": "OK" }, "401": { "description": "Unauthorized" } },
        "security": [ { "BearerAuth": [] } ]
      }
    },

    "/users/me": {
      "get": { "summary": "Get me", "responses": { "200": { "description": "OK" }, "401": { "description": "Unauthorized" } }, "security": [ { "BearerAuth": [] } ] },
      "put": { "summary": "Update me", "responses": { "200": { "description": "OK" }, "401": { "description": "Unauthorized" } }, "security": [ { "BearerAuth": [] } ] }
    },
    "/users/me/password": {
      "put": { "summary": "Change password", "responses": { "200": { "description": "OK" }, "401": { "description": "Unauthorized" } }, "security": [ { "BearerAuth": [] } ] }
    },

    "/orders/mine/list": {
      "get": { "summary": "List my orders", "responses": { "200": { "description": "OK" }, "401": { "description": "Unauthorized" } }, "security": [ { "BearerAuth": [] } ] }
    },
    "/orders/{orderNumber}/status": {
      "patch": { "summary": "Update order status", "responses": { "200": { "description": "OK" }, "400": { "description": "Bad Request" }, "401": { "description": "Unauthorized" }, "403": { "description": "Forbidden" } }, "security": [ { "BearerAuth": [] } ] }
    },

    "/logs/activity": {
      "get": { "summary": "Activity logs", "responses": { "200": { "description": "OK" }, "401": { "description": "Unauthorized" }, "403": { "description": "Forbidden" } }, "security": [ { "BearerAuth": [] } ] }
    },
    "/logs/notifications": {
      "get": { "summary": "Notification logs", "responses": { "200": { "description": "OK" }, "401": { "description": "Unauthorized" }, "403": { "description": "Forbidden" } }, "security": [ { "BearerAuth": [] } ] }
    },
    "/logs/orders": {
      "get": { "summary": "Orders logs", "responses": { "200": { "description": "OK" }, "401": { "description": "Unauthorized" }, "403": { "description": "Forbidden" } }, "security": [ { "BearerAuth": [] } ] }
    },

    "/menu/categories": { "get": { "summary": "List categories", "responses": { "200": { "description": "OK" } } }, "post": { "summary": "Create category", "responses": { "201": { "description": "Created" }, "401": { "description": "Unauthorized" }, "403": { "description": "Forbidden" } }, "security": [ { "BearerAuth": [] } ] }, "delete": { "summary": "Delete category", "responses": { "200": { "description": "OK" }, "401": { "description": "Unauthorized" }, "403": { "description": "Forbidden" } }, "security": [ { "BearerAuth": [] } ] } },
    "/menu/items": { "get": { "summary": "List items", "responses": { "200": { "description": "OK" } } }, "post": { "summary": "Create menu item", "responses": { "201": { "description": "Created" }, "401": { "description": "Unauthorized" }, "403": { "description": "Forbidden" } }, "security": [ { "BearerAuth": [] } ] }, "delete": { "summary": "Delete menu item", "responses": { "200": { "description": "OK" }, "401": { "description": "Unauthorized" }, "403": { "description": "Forbidden" } }, "security": [ { "BearerAuth": [] } ] } },
    "/menu/items/{id}": {
      "put": { "summary": "Update menu item", "responses": { "200": { "description": "OK" }, "401": { "description": "Unauthorized" }, "403": { "description": "Forbidden" } }, "security": [ { "BearerAuth": [] } ] },
      "delete": { "summary": "Delete menu item", "responses": { "200": { "description": "OK" }, "401": { "description": "Unauthorized" }, "403": { "description": "Forbidden" } }, "security": [ { "BearerAuth": [] } ] }
    },
    "/menu/items/{id}/availability": { "patch": { "summary": "Toggle menu item availability", "responses": { "200": { "description": "OK" }, "401": { "description": "Unauthorized" }, "403": { "description": "Forbidden" } }, "security": [ { "BearerAuth": [] } ] } },

    "/drivers": {
      "get": {
        "summary": "List drivers",
        "responses": { "200": { "description": "OK" } },
        "security": [ { "BearerAuth": [] } ]
      },
      "post": {
        "summary": "Create driver",
        "responses": { "201": { "description": "Created" }, "401": { "description": "Unauthorized" }, "403": { "description": "Forbidden" } },
        "security": [ { "BearerAuth": [] } ]
      }
    },
    "/drivers/assign": {
      "post": {
        "summary": "Assign order to driver",
        "responses": { "200": { "description": "OK" }, "401": { "description": "Unauthorized" }, "403": { "description": "Forbidden" } },
        "security": [ { "BearerAuth": [] } ]
      }
    },

    "/cash": {
      "post": {
        "summary": "Create cash transaction",
        "responses": { "201": { "description": "Created" }, "401": { "description": "Unauthorized" } },
        "security": [ { "BearerAuth": [] } ]
      }
    },
    "/cash/confirm": {
      "post": {
        "summary": "Confirm cash transaction",
        "responses": { "200": { "description": "OK" }, "401": { "description": "Unauthorized" } },
        "security": [ { "BearerAuth": [] } ]
      }
    },
    "/cash/verify": {
      "post": {
        "summary": "Verify cash transaction",
        "responses": { "200": { "description": "OK" }, "401": { "description": "Unauthorized" } },
        "security": [ { "BearerAuth": [] } ]
      }
    },

    "/reservations": {
      "get": {
        "summary": "List reservations",
        "responses": { "200": { "description": "OK" } },
        "security": [ { "BearerAuth": [] } ]
      },
      "post": {
        "summary": "Create reservation",
        "responses": { "201": { "description": "Created" }, "401": { "description": "Unauthorized" } },
        "security": [ { "BearerAuth": [] } ]
      }
    },

    "/notifications/dispatch": {
      "post": {
        "summary": "Dispatch notification",
        "responses": { "200": { "description": "OK" }, "401": { "description": "Unauthorized" }, "403": { "description": "Forbidden" } },
        "security": [ { "BearerAuth": [] } ]
      }
    },

    "/webhooks": { "post": { "summary": "Register webhook", "responses": { "201": { "description": "Created" } }, "security": [ { "BearerAuth": [] } ] }, "get": { "summary": "List webhooks", "responses": { "200": { "description": "OK" } }, "security": [ { "BearerAuth": [] } ] } },
    "/webhooks/{id}/enable": { "post": { "summary": "Enable webhook", "responses": { "200": { "description": "OK" } }, "security": [ { "BearerAuth": [] } ] } },
    "/webhooks/{id}/disable": { "post": { "summary": "Disable webhook", "responses": { "200": { "description": "OK" } }, "security": [ { "BearerAuth": [] } ] } },
    "/webhooks/trigger": { "post": { "summary": "Trigger webhooks", "responses": { "200": { "description": "OK" } }, "security": [ { "BearerAuth": [] } ] } },

    "/metrics": {
      "get": {
        "summary": "Prometheus metrics",
        "responses": { "200": { "description": "OK" }, "401": { "description": "Unauthorized" }, "403": { "description": "Forbidden" } },
        "security": [ { "BearerAuth": [] } ]
      }
    },
    "/cash/summary/driver/{id}": { "get": { "summary": "Driver daily summary", "responses": { "200": { "description": "OK" }, "401": { "description": "Unauthorized" }, "403": { "description": "Forbidden" } }, "security": [ { "BearerAuth": [] } ] } },

    "/reservations/availability": { "get": { "summary": "Check availability", "responses": { "200": { "description": "OK" } } } },
    "/reservations/{id}/status": { "patch": { "summary": "Update reservation status", "responses": { "200": { "description": "OK" }, "401": { "description": "Unauthorized" }, "403": { "description": "Forbidden" } }, "security": [ { "BearerAuth": [] } ] } },
    "/reservations/{id}/cancel": { "post": { "summary": "Cancel reservation", "responses": { "200": { "description": "OK" } } } }
  }
}