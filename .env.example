# Copy to .env and fill real values for production

# Runtime
NODE_ENV=development
PORT=3333

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/cantina_mariachi?schema=public"

# Auth (PASETO v4)
PASETO_PRIVATE_KEY=""
PASETO_PUBLIC_KEY=""
TOKEN_EXPIRATION=15m
REFRESH_TOKEN_EXPIRATION=7d
REFRESH_ROTATION=true
BCRYPT_SALT_ROUNDS=10

# Sessions/Cookies
SESSION_SECRET="replace-with-strong-secret"
COOKIE_SECRET="replace-with-strong-cookie-secret"

# Redis
REDIS_URL=redis://localhost:6379

# CORS
CORS_ORIGIN=http://localhost:5173,http://localhost:3333

# Body parsing
JSON_BODY_LIMIT=1mb
ALLOW_URLENCODED=0

# Retention windows (days)
AUTH_DATA_RETENTION_DAYS=30
USER_DATA_RETENTION_DAYS=90
WEBHOOK_RETENTION_DAYS=30

# Orders
ORDER_TRACKING_TTL_HOURS=24

# Phone normalization
DEFAULT_PHONE_COUNTRY=MA

# Cron/dev flags
ENABLE_DEV_CRONS=false
INSTANCE_ID=

# Testing/dev toggles (do not enable in production)
ALLOW_INSECURE_TEST_TOKENS=0