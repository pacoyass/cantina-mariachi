# Server
NODE_ENV=development
PORT=3333

# Cookies / Sessions
COOKIE_SECRET=change-me
SESSION_SECRET=change-me
ENABLE_EXPRESS_SESSION=false

# CSRF
CSRF_SECRET=change-me

# CORS (comma-separated)
CORS_ORIGIN=

# Cache/CDN invalidation webhook (optional)
CACHE_INVALIDATION_WEBHOOK_URL=

# Redis (optional)
REDIS_URL=

# Database (Prisma) â€“ configure as needed
DATABASE_URL=

# i18n
SUPPORTED_LANGUAGES=en,es,fr,de,it,pt,ar

# Machine Translation (free default: LibreTranslate)
TMS_MT_PROVIDER=libretranslate
LIBRETRANSLATE_URL=http://localhost:5000
# If your instance requires a key:
LIBRETRANSLATE_API_KEY=

# Optional alternative MT: DeepL
# TMS_MT_PROVIDER=deepl
DEEPL_API_KEY=
DEEPL_API_URL=https://api-free.deepl.com/v2

# TMS integration (optional, for push/pull webhooks)
TMS_WEBHOOK_URL=
TMS_API_KEY=

# Instance id (optional)
INSTANCE_ID=

# CMS draft retention days
CMS_DRAFT_RETENTION_DAYS=30