# Database - PostgreSQL
DATABASE_URL="postgresql://username:password@localhost:5432/cantina_mariachi?schema=public"

# PASETO keys (required for auth) - Generate new ones for production
PASETO_PRIVATE_KEY="your-private-key-here"
PASETO_PUBLIC_KEY="your-public-key-here"

# Session and Cookie secrets - Generate random secrets for production
SESSION_SECRET="your-session-secret-here"
COOKIE_SECRET="your-cookie-secret-here"
ENABLE_EXPRESS_SESSION=true

# CORS Configuration
CORS_ORIGIN="http://localhost:3000,http://localhost:5173"

# Redis (optional - for production caching and sessions)
# REDIS_URL="redis://localhost:6379"

# Environment
NODE_ENV=development

# Server Configuration
PORT=3000