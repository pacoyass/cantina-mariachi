# Runtime
NODE_ENV=development
PORT=3333

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/cantina_mariachi?schema=public

# Redis
REDIS_URL=redis://localhost:6379

# Auth (PASETO)
# Generate keys (example):
# node -e "(async()=>{const {V4}=require('paseto');const kp=await V4.generateKey('public');console.log('PRIVATE=',kp.export({type:'secret'}).toString());console.log('PUBLIC=',kp.export({type:'public'}).toString());})();"
PASETO_PRIVATE_KEY=
PASETO_PUBLIC_KEY=
TOKEN_EXPIRATION=15m
REFRESH_TOKEN_EXPIRATION=7d
REFRESH_ROTATION=true
BCRYPT_SALT_ROUNDS=10
ALLOW_INSECURE_TEST_TOKENS=0

# Cookies / Sessions / CSRF
COOKIE_SECRET=replace-with-strong-cookie-secret
SESSION_SECRET=replace-with-strong-session-secret
ENABLE_EXPRESS_SESSION=false
CSRF_SECRET=replace-with-strong-csrf-secret

# HTTP / Parsing
CORS_ORIGIN=http://localhost:3333,http://localhost:5173
JSON_BODY_LIMIT=1mb
ALLOW_URLENCODED=0

# App Defaults
DEFAULT_PHONE_COUNTRY=MA
ORDER_TRACKING_TTL_HOURS=24

# Retention windows (days)
AUTH_DATA_RETENTION_DAYS=30
USER_DATA_RETENTION_DAYS=90
WEBHOOK_RETENTION_DAYS=30

# Cron / Ops
ENABLE_DEV_CRONS=false
INSTANCE_ID=

# Diagnostics
VALIDATION_DEBUG=0

# i18n
SUPPORTED_LANGUAGES=en,es,fr,de,it,pt,ar

# Cache/CDN invalidation webhook (optional)
CACHE_INVALIDATION_WEBHOOK_URL=

# Machine Translation (free default: LibreTranslate)
TMS_MT_PROVIDER=libretranslate
LIBRETRANSLATE_URL=http://localhost:5000
# If your instance requires a key:
LIBRETRANSLATE_API_KEY=

# Optional alternative MT: DeepL
# TMS_MT_PROVIDER=deepl
DEEPL_API_KEY=
DEEPL_API_URL=https://api-free.deepl.com/v2

# TMS integration (optional, for push/pull webhooks)
TMS_WEBHOOK_URL=
TMS_API_KEY=

# CMS draft retention days
CMS_DRAFT_RETENTION_DAYS=30