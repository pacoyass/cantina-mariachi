# Backend environment example

# Core
NODE_ENV=production
PORT=3000

# Database
DATABASE_URL="postgresql://user:pass@host:5432/cantina?schema=public"

# Auth (PASETO)
PASETO_PRIVATE_KEY="<paste your private key>"
PASETO_PUBLIC_KEY="<paste your public key>"
TOKEN_EXPIRATION=15m
REFRESH_TOKEN_EXPIRATION=7d
REFRESH_ROTATION=true

# Cookies / Sessions
COOKIE_SECRET="replace-me"
SESSION_SECRET="replace-me"
ENABLE_EXPRESS_SESSION=false

# CORS
CORS_ORIGIN="https://www.example.com,https://admin.example.com"

# Redis
REDIS_URL="redis://localhost:6379"

# Body limits
JSON_BODY_LIMIT=1mb
ALLOW_URLENCODED=0

# Retention windows (days)
AUTH_DATA_RETENTION_DAYS=30
USER_DATA_RETENTION_DAYS=90
WEBHOOK_RETENTION_DAYS=30

# Cron
ENABLE_DEV_CRONS=false
INSTANCE_ID=